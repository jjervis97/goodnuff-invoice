#!/usr/bin/env bash
# Good 'Nuff main business menu (simple, job-focused)

BIN="$HOME/.local/bin"

while true; do
  echo "====================================="
  echo "   GOOD 'NUFF MOBILE MECHANIC - GN   "
  echo "====================================="
  echo "1) Create new job"
  echo "2) Work with existing job (history / notes / diagnostic)"
  echo "3) Run business backup"
  echo "4) Export tax CSV"
  echo "5) Show Outgoing folder path"
  echo "6) Quit"
  echo "-------------------------------------"
  read -rp "Choose an option [1-6]: " choice
  echo

  case "$choice" in
    1)
      "$BIN/newjob"
      ;;
    2)
      "$BIN/jobmenu"
      ;;
    3)
      "$BIN/bizbackup"
      ;;
    4)
      "$BIN/taxexport"
      ;;
    5)
      echo "Your Outgoing folder is: $HOME/Outgoing"
      ;;
    6|q|Q)
      echo "Goodbye."
      exit 0
      ;;
    *)
      echo "Invalid option."
      ;;
  esac

  echo
  echo "-------------------------------------"
  read -rp "Press Enter to return to the main menu..." _
  echo
done